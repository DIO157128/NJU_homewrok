<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nju.edu.erp.dao.PromotionStrategyOnAmountDao">
    <update id="setPromotionStrategyOnAmount" parameterType="PromotionStrategyOnAmountPO">
        insert into `promotion_strategy_onamount`(min_amount,max_amount,discount,voucher,start_time,end_time,create_time)
        values(#{min_amount},#{max_amount},#{discount},#{voucher},#{start_time},#{end_time},#{create_time})
    </update>

    <select id="getVoucherByAmount" resultType="BigDecimal">
        select voucher
        from `promotion_strategy_onamount`
        where #{Amount}>=min_amount And max_amount>=#{Amount};
    </select>

    <select id="getDiscountByAmount" resultType="BigDecimal">
        select discount
        from `promotion_strategy_onamount`
        where #{Amount}>=min_amount And max_amount>=#{Amount};
    </select>

    <select id="getAllPromotionStrategyOnAmount"  resultMap="PromotionStrategyOnAmountPO">
        select *
        from `promotion_strategy_onamount`;
    </select>

    <update id="updateById" parameterType="PromotionStrategyOnAmountPO">
        update `promotion_strategy_onamount`
        <set>
            <if test="min_amount !=null">`min_amount`=#{min_amount},</if>
            <if test="max_amount !=null">`max_amount`=#{max_amount},</if>
            <if test="discount !=null">`discount`=#{discount},</if>
            <if test="voucher !=null">`voucher`=#{voucher},</if>
            <if test="start_time!=null">`start_time`=#{start_time},</if>
            <if test="end_time!=null">`end_time`=#{end_time},</if>
            <if test="create_time!=null">`create_time`=#{create_time},</if>
        </set>
        where id=#{id}
    </update>

    <select id="findById" resultType="PromotionStrategyOnAmountPO">
        select *
        from `promotion_strategy_onamount`
        where id=#{id};
    </select>

    <delete id="deleteById">
        delete from `promotion_strategy_onamount` where id = #{id}
    </delete>

    <select id="getStrategyOnOneAmount" resultType="PromotionStrategyOnAmountPO">
        select *
        from `promotion_strategy_onamount`
        where #{Amount}>=min_amount And max_amount>#{Amount};
    </select>

    <resultMap id="PromotionStrategyOnAmountPO" type="com.nju.edu.erp.model.po.PromotionStrategyOnAmountPO">
        <id column="id" property="id"></id>

        <result column="min_amount" property="min_amount"></result>
        <result column="max_amount" property="max_amount"></result>
        <result column="voucher" property="voucher"></result>
        <result column="start_time" property="start_time"></result>
        <result column="end_time" property="end_time"></result>
        <result column="create_time" property="create_time"></result>
    </resultMap>


</mapper>
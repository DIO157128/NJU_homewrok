.index-title,
.index-list {
  padding: 0 30rpx;
}

.index-title {
  padding: 40rpx 0;
  font-size: 30px;
  font-weight: 600;
  text-align: center;
}

.list-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  margin-left: 20px;

  line-height: 4ch;
  color: #333;
}

.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
 }
  
 .header image {
  width: 200rpx;
  height: 200rpx;
 }
  
 .content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
 }
  
 .content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
 }
  
 .bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
 }
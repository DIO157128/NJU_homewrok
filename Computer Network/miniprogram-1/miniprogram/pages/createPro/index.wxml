<!--pages/createPro/index.wxml-->
<view class="container">
  <view class="form-group">
    <view class="form-cell">
      <view class="form-cell_title">项目名称</view>
      <input class="form-cell_input" placeholder="请输入项目名称（15字以内）" placeholder-class="form-cell_title-placeholder"
        bindinput="onTitleInput" value="{{title}}" />
    </view>
    <view class="form-cell">
      <view class="form-cell_title">项目简述</view>
      <input class="form-cell_input" placeholder="请输入描述（100字以内）" placeholder-class="form-cell_title-placeholder"
        bindinput="onDescInput" value="{{desc}}" />
    </view>
  </view>
  <view class="footer">
    <view class="reset" bindtap="reset">重置</view>
    <view class="save" bindtap="createGroup">生成项目</view>
  </view>
</view>

